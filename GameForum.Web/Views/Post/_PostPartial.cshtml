@model GameForum.ViewModel.PostViewModel

<div class="my-brdr-btm my-brdr-top mt-4 pt-5 pb-2">
    <div class="row m-0 pl-3 pr-3">
        <div class="d-inline-block" style="width:64px">
            <img style="width:64px" src="~/img/barbarian.png" />
        </div>
        <div class="d-inline-block pl-5" style="width:calc(100% - 64px)">
            <div class="row">
                <div class="col-6"><p>@Model.Author</p></div>
                <div class="col-6 align-items-end"><p class="text-right">@Model.LastActivity</p></div>
            </div>
            <p>@Model.Content</p>
            <p class="text-right">Likes: @Model.LikeCount</p>
        </div>
    </div>
</div>
