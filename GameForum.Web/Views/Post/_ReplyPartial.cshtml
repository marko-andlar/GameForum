@model GameForum.ViewModel.ReplyViewModel

<div class="my-brdr-btm pt-5 pb-2">
    <row class="row m-0 pl-3 pr-3">
        <div class="d-inline-block" style="width:64px">
            <img style="width:64px" src="~/img/barbarian.png" />
        </div>
        <div class="d-inline-block pl-5" style="width:calc(100% - 64px)">
            <div class="row">
                <div class="col-6"><p>@Model.Author</p></div>
                <div class="col-6 align-items-end"><p class="text-right">@Model.LastActivity</p></div>
            </div>
            <p>@Model.Content</p>
            <a id="reply@(Model.Id)" href="javascript:void(0)" class="float-right no-underline" onclick='likeClicked("reply", @Model.Id)'><i class="@(Model.Liked ? "fas" : "far") fa-heart"></i> <span>@Model.LikeCount</span></a>
        </div>
    </row>
</div>
