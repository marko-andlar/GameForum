@model GameForum.Model.Post

@section Breadcrumbs{
    <div class="breadcrumbs my-brdr-btm">
        <div class="container">
            <ol class="my-bcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Forum</a></li>
                <li class="breadcrumb-item"><a asp-controller="Post" asp-action="Index" asp-route-categoryId="@Model.CategoryId">@Model.Category.Name</a></li>
                <li class="breadcrumb-item active">@Model.Title</li>
            </ol>
        </div>
    </div>
}

<div class="space"></div>

<div class="text-light">
    <h1>@Model.Title</h1>
    <p>@Model.Content</p>
</div>
